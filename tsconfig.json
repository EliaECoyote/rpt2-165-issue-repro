{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "node_modules/lit-html",
    "node_modules/lit-element"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.spec.ts",
    "src/rollup.ts"
  ]
}